<div class="container form-group" style="margin-top: 30px;">
  <%= simple_form_for [@question] do |f| %>
    <%= f.input :title, label:"Posez ici votre question" %>
    <%= f.input :description, label:"Vous pouvez ajouter ici des éléments pour préciser votre question" %>
    <%= f.submit "Soumettre sa question", class: "btn btn-primary revote" %>
<% end %>
